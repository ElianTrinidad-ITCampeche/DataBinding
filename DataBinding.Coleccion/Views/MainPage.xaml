<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:DataBinding.Coleccion.Views"
             xmlns:models="clr-namespace:DataBinding.Coleccion.Models"
             x:DataType="views:MainPage"
             x:Class="DataBinding.Coleccion.Views.MainPage"
             BackgroundColor="#f0f0f0">
    <Grid
        RowDefinitions="Auto,*,Auto"
        RowSpacing="8"
        Padding="16">
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="4">
            <Label
                Text="Orígenes del paquete:"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Button
                BackgroundColor="#fdfdfd"
                Grid.Column="1"
                Text="+"
                TextColor="#1e7f1e"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnAgregarButtonClicked"/>
            <Button
                BackgroundColor="#fdfdfd"
                Grid.Column="2"
                Text="×"
                TextColor="#b72b35"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Beige"
            ItemsSource="{Binding Origenes}"
            SelectionMode="Single"
            SelectedItem="{Binding OrigenSeleccionado}"
            EmptyView="Aún no se registran orígenes de paquetes"
            SelectionChanged="OrigenesListView_SelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:OrigenDePaquete}">
                    <Border
                        Stroke="Blue"
                        Padding="8">
                        <Grid
                            RowDefinitions="Auto,*"
                            ColumnDefinitions="Auto,Auto">
                            <CheckBox
                                Grid.RowSpan="2"
                                IsChecked="{Binding EstaHabilitado}"/>
                            <Label
                                Grid.Column="1"
                                Text="{Binding Nombre}"/>
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding Origen}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid
            Grid.Row="2"
            RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="Auto,*,Auto"
            ColumnSpacing="6"
            RowSpacing="5">
            <Label
                Text="Nombre:"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                Text="{Binding NombreDelOrigen}"
                BackgroundColor="#ffffff"/>
            <Label
                Grid.Row="1"
                Text="Orígen:"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding RutaDelOrigen}"
                BackgroundColor="#ffffff"/>
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="Actualizar"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="#fdfdfd"
                TextColor="#000000"
                BorderWidth="1"
                BorderColor="Gray"
                Clicked="OnActualizarButton_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>