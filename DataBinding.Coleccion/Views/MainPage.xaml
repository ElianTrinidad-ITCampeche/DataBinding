<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:DataBinding.Coleccion.Models"
             x:Class="DataBinding.Coleccion.Views.MainPage"
             BackgroundColor="#f0f0f0">
    <Grid
        RowDefinitions="Auto,*,Auto"
        RowSpacing="6"
        Padding="16">
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="4">
            <Label
                Text="Orígenes del paquete:"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Button
                BackgroundColor="#fdfdfd"
                Grid.Column="1"
                Text="+"
                TextColor="#1e7f1e"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnAgregarButtonClicked"/>
            <Button
                BackgroundColor="#fdfdfd"
                Grid.Column="2"
                Text="×"
                TextColor="#b72b35"
                FontAttributes="Bold"
                BorderColor="Gray"
                BorderWidth="1"
                Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="Beige"
            SelectionMode="Single"
            EmptyView="Aún no se registran orígenes de paquetes"
            SelectionChanged="OrigenesListView_SelectionChanged"
            x:Name="OrigenesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:OrigenDePaquete}">
                    <Border
                        Stroke="Blue"
                        Padding="8">
                        <Grid
                            RowDefinitions="Auto,*"
                            ColumnDefinitions="Auto,Auto">
                            <CheckBox
                                Grid.RowSpan="2"
                                IsChecked="False"/>
                            <Label
                                Grid.Column="1"
                                Text="Empty"/>
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Empty 2"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell>
                        
                    </TextCell>
                    <Label
                        Text=""
                        FontSize="16"
                        />
                </DataTemplate>
            </ListView.ItemTemplate> -->
        </CollectionView>
        <Grid
            Grid.Row="2"
            RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="Auto,*,Auto"
            ColumnSpacing="6"
            RowSpacing="5">
            <Label
                Text="Nombre:"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                BackgroundColor="#ffffff"
                x:Name="NombreEntry"/>
            <Label
                Grid.Row="1"
                Text="Orígen:"
                HorizontalOptions="Start"
                VerticalOptions="Center"/>
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="#ffffff"
                x:Name="OrigenEntry"/>
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="Actualizar"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                BackgroundColor="#fdfdfd"
                TextColor="#000000"
                BorderWidth="1"
                BorderColor="Gray"
                Clicked="OnActualizarButton_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>